{
  "name": "test",
  "version": "1.0.0",
  "description": "electron test!",
  "main": "main.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "electron-builder",
    "rebuild": "./node_modules/.bin/electron-rebuild",
    "deploy": "node ./config/firebase-deploy.js",
    "start": "electron ./main.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nana3na/test.git"
  },
  "build": {
    "appId": "jp.electron.moving",
    "directories": {
      "output": "dist"
    },
    "files": [
      "**/*"
    ],
    "mac": {
      "icon": "src/icon.icns",
      "target": [
        "dmg"
      ]
    },
    "win": {
      "icon": "src/icon.ico",
      "target": "nsis"
    },
    "linux": {
      "category": "Utility"
    },
    "nsis":{
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/nana3na/test/issues"
  },
  "homepage": "https://github.com/nana3na/test#readme",
  "devDependencies": {
    "electron": "^12.0.7",
    "electron-firebase": "^1.2.0",
    "electron-builder": "^22.11.1"
  }
}
